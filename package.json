{
  "name": "automacao-web-cypress",
  "version": "1.0.0",
  "description": "Automação web com Cypress para automationexercise.com",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:headed": "cypress run --headed",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "test": "cypress run --reporter mochawesome",
    "test:headed": "cypress run --headed --reporter mochawesome",
    "pretest": "rmdir /s /q cypress\\reports\\mochawesome-report 2>nul || echo Diretório não existe",
    "posttest": "node scripts/generate-report.js"
  },
  "keywords": ["cypress", "automation", "testing"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^13.6.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
